{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "node",
      "react"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
  ],
  "include": ["src/**/*"],
}
